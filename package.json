{
  "name": "@mixxtor/currencyx-adonisjs",
  "description": "AdonisJS integration for CurrencyX.js with database exchange provider and cache support",
  "version": "1.2.8",
  "engines": {
    "node": ">=20.6.0"
  },
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build",
    "!build/bin",
    "!build/tests"
  ],
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types.js",
    "./services/main": "./build/services/main.js",
    "./currency_provider": "./build/providers/currency_provider.js"
  },
  "scripts": {
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "format": "prettier --write .",
    "quick:test": "node --import=./tsnode.esm.js --enable-source-maps bin/test.ts",
    "pretest": "npm run lint",
    "test": "c8 npm run quick:test",
    "prebuild": "npm run lint && npm run clean",
    "build": "tsc",
    "postbuild": "npm run copy:templates",
    "release": "release-it",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "release:beta": "release-it --preRelease=beta",
    "release:alpha": "release-it --preRelease=alpha",
    "release:dry": "release-it --dry-run",
    "version": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "adonisjs",
    "currency",
    "converter",
    "exchange-rates",
    "typescript",
    "database",
    "lucid",
    "cache"
  ],
  "author": "Mixxtor",
  "license": "MIT",
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/cache": "^1.3.0",
    "@adonisjs/core": "^6.19.0",
    "@adonisjs/eslint-config": "2.1.0",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^1.4.1",
    "@japa/assert": "^4.1.1",
    "@japa/runner": "^4.3.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@swc/core": "^1.13.3",
    "@types/node": "^24.1.0",
    "better-sqlite3": "^12.2.0",
    "c8": "^10.1.3",
    "copyfiles": "^2.4.1",
    "cross-env": "^10.0.0",
    "del-cli": "^6.0.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.32.0",
    "luxon": "^3.7.1",
    "mjml": "^4.15.3",
    "prettier": "^3.6.2",
    "release-it": "^19.0.4",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/cache": "^1.3.0",
    "@adonisjs/core": "^6.19.0",
    "@adonisjs/lucid": "^21.7.0"
  },
  "dependencies": {
    "@mixxtor/currencyx-js": "^1.1.5"
  },
  "peerDependenciesMeta": {
    "@adonisjs/cache": {
      "optional": true
    }
  },
  "homepage": "https://github.com/mixxtor/currencyx-adonisjs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mixxtor/currencyx-adonisjs.git"
  },
  "bugs": {
    "url": "https://github.com/mixxtor/currencyx-adonisjs/issues"
  },
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": true,
      "requireUpstream": true,
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "push": true,
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "Release v${version}",
      "releaseNotes": null,
      "autoGenerate": true,
      "draft": false,
      "preRelease": false
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "prettier": "@adonisjs/prettier-config"
}
